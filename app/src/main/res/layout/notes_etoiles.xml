<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/etoile_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/etoile_vide" />

    <ImageView
        android:id="@+id/etoile_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etoile_1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/etoile_vide" />

    <ImageView
        android:id="@+id/etoile_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etoile_2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/etoile_vide" />

    <ImageView
        android:id="@+id/etoile_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etoile_3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/etoile_vide" />

    <ImageView
        android:id="@+id/etoile_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etoile_4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/etoile_vide" />

    <ImageView
        android:id="@+id/coeur"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/etoile_5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coeur" />
</androidx.constraintlayout.widget.ConstraintLayout>