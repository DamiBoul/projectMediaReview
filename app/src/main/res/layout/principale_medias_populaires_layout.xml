<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/principale_populaire"
        android:textColor="@color/black"
        android:textSize="@dimen/tt_titre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:id="@+id/populaire_ligne1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <fr.devops.mediareview.composants.mediaImage.MediaAnnoteView
                android:id="@+id/med_pop_1"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                app:type_note="MOYENNE"
                tools:ignore="NestedWeights" />

            <fr.devops.mediareview.composants.mediaImage.MediaAnnoteView
                android:id="@+id/med_pop_2"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_marginStart="12dp"
                android:layout_height="match_parent"
                app:type_note="MOYENNE" />

            <fr.devops.mediareview.composants.mediaImage.MediaAnnoteView
                android:id="@+id/med_pop_3"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_marginStart="12dp"
                android:layout_height="match_parent"
                app:type_note="MOYENNE" />

            <fr.devops.mediareview.composants.mediaImage.MediaAnnoteView
                android:id="@+id/med_pop_4"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_marginStart="12dp"
                android:layout_height="match_parent"
                app:type_note="MOYENNE" >

            </fr.devops.mediareview.composants.mediaImage.MediaAnnoteView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/populaire_ligne2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/populaire_ligne1">

            <fr.devops.mediareview.composants.mediaImage.MediaAnnoteView
                android:id="@+id/med_pop_5"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                app:type_note="MOYENNE"
                tools:ignore="NestedWeights" />

            <fr.devops.mediareview.composants.mediaImage.MediaAnnoteView
                android:id="@+id/med_pop_6"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_marginStart="12dp"
                android:layout_height="match_parent"
                app:type_note="MOYENNE" />

            <fr.devops.mediareview.composants.mediaImage.MediaAnnoteView
                android:id="@+id/med_pop_7"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_marginStart="12dp"
                android:layout_height="match_parent"
                app:type_note="MOYENNE" />

            <fr.devops.mediareview.composants.mediaImage.MediaAnnoteView
                android:id="@+id/med_pop_8"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_marginStart="12dp"
                android:layout_height="match_parent"
                app:type_note="MOYENNE" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>