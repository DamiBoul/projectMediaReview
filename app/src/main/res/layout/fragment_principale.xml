<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.principale.PrincipaleFragment">

    <TextView
        android:id="@+id/text_principale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fr.devops.mediareview.composants.mediaImage.MediaAnnoteView
        android:id="@+id/media_test1"
        android:layout_width="@dimen/media_image_width_l"
        android:layout_height="@dimen/media_image_height_l"
        app:layout_constraintBottom_toTopOf="@+id/text_principale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/media_test2"
        app:type_note="ETOILES" />

    <fr.devops.mediareview.composants.mediaImage.MediaAnnoteView
        android:id="@+id/media_test2"
        android:layout_width="@dimen/media_image_width_l"
        android:layout_height="@dimen/media_image_height_l"
        app:layout_constraintBottom_toTopOf="@+id/text_principale"
        app:layout_constraintStart_toStartOf="parent"
        app:type_note="MOYENNE" />
</androidx.constraintlayout.widget.ConstraintLayout>